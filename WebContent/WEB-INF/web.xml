<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>BookStore</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
    <filter>
  	<filter-name>loginFilter</filter-name>
  	<filter-class>cn.zhao.filter.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>loginFilter</filter-name>
  	<url-pattern>*.do</url-pattern>
  </filter-mapping>
  <servlet>
  	<servlet-name>UserServlet</servlet-name>
  	<servlet-class>cn.zhao.servlet.UserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>UserServlet</servlet-name>
  	<url-pattern>/user_register.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
  	<url-pattern>/user_login.action</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
  	<url-pattern>/user_unlogin.action</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  	<servlet-name>BookServlet</servlet-name>
  	<servlet-class>cn.zhao.servlet.BookServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>BookServlet</servlet-name>
  	<url-pattern>/book_getAll.do</url-pattern>
  </servlet-mapping>
  
    <servlet>
  	<servlet-name>CartServlet</servlet-name>
  	<servlet-class>cn.zhao.servlet.CartServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>CartServlet</servlet-name>
  	<url-pattern>/cart_add.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>CartServlet</servlet-name>
  	<url-pattern>/cart_show.do</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
  	<servlet-name>CartServlet</servlet-name>
  	<url-pattern>/cart_update.do</url-pattern>
  </servlet-mapping>
	<servlet-mapping>
  	<servlet-name>CartServlet</servlet-name>
  	<url-pattern>/cart_delete.do</url-pattern>
  </servlet-mapping>
  
    <servlet>
  	<servlet-name>OrdersServlet</servlet-name>
  	<servlet-class>cn.zhao.servlet.OrdersServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>OrdersServlet</servlet-name>
  	<url-pattern>/order_add.do</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
  	<servlet-name>OrdersServlet</servlet-name>
  	<url-pattern>/order_show.do</url-pattern>
  </servlet-mapping>
  
</web-app>